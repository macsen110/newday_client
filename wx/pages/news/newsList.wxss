.list{
  height: 100vh;
  width: 100%;
}
.content {
  display: flex;  
  flex-direction: row; 
  justify-content: space-between;
  align-items: flex-end;
  padding: 24rpx; 
}
.content-text {
   width: 65%; 
}
.img {
  /* padding:4pt;  */
  height: 150rpx;
  width: 200rpx;
  vertical-align: middle;
}
.icon-view {
  width: 30rpx;
  height: 22.5rpx;
  margin-right: 8rpx;
}
.listView {
  width: 100%;
  /* height: 75pt; */
}
.line {
  height: 1px;
  background-color: #ccc;
  margin-left: 5pt;
  margin-right: 5pt;
}
.content-name {
  font-size: 12pt;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.content-detail {
  display: -webkit-box; 
  height: 60rpx;
  font-size: 8pt;
  line-height: 30rpx;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #999;
  overflow:hidden;
  text-overflow:ellipsis;
  margin: 10rpx 0 20rpx;
}
.content-buttom {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 8pt;
  
}

.content-buttom .source-name {
  margin-right: 28rpx;
}