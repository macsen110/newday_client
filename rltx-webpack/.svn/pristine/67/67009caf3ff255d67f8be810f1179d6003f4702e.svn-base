.fl {
	float: left; 
	display: inline;
}

.fr {
	float:right; 
	display:inline;
}

.clearfix:before,
.clearfix:after {
	display: block;
	content: "\0020";
	height: 0;
	overflow: hidden;
}

.clearfix:after {
	clear: both;
}

.clearfix {
	*zoom: 1;
}

.ellipsis { 
	display: inline-block; 
	vertical-align: middle; 
	white-space: nowrap; 
	overflow: hidden; 
	text-overflow:ellipsis; 
}